<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige uno de los \nproyectos para participar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <LinearLayout
        android:id="@+id/canvasProjectUno"
        android:layout_width="353dp"
        android:layout_height="140dp"
        android:background="@drawable/grey_rectangle"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintVertical_bias="0.093">


        <TextView
            android:id="@+id/tituloProyectoUno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="10dp"
            android:text="Reducción de contaminación - Jardín real"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/descripcionProjectoUno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:text="Los vecinos del barrio Jardín Real han creado un proyecto de ciencia ciudadana para reducir la contaminación atmosférica perceptible en el barrio. Con el uso de sensores e informes individuales van obteniendo la información necesaria para generar un cambio."
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/barraVerdeUno"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@drawable/green_rectangle"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/humano_icon">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="150 participantes"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:paddingRight="70dp">

            </TextView>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/comments_icon">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="250 reports"
                android:textColor="@color/white"
                android:textAlignment="center">

            </TextView>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/canvasProjectDos"
        android:layout_width="353dp"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:background="@drawable/grey_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/canvasProjectUno"
        app:layout_constraintVertical_bias="0.154">

        <TextView
            android:id="@+id/tituloProyectoDos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="10dp"
            android:text="Tráfico excesivo - Santa Margarita"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/descripcionProjectoDos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:text="Una de las calles más transitadas de la ciudad y al mismo tiempo una de las más insuficientes, los usuarios de la calle buscan una forma de reducir su congestión, así como crear información sobre los horarios pico de tráfico y las condiciones propensas a los accidentes."
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/barraVerdeDos"
            android:layout_width="353dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:background="@drawable/green_rectangle"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/humano_icon">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="150 participantes"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:paddingRight="70dp">

            </TextView>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/comments_icon">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="250 reports"
                android:textColor="@color/white"
                android:textAlignment="center">

            </TextView>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/canvasProjectTres"
        android:layout_width="353dp"
        android:layout_height="140dp"
        android:background="@drawable/grey_rectangle"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/canvasProjectDos"
        app:layout_constraintVertical_bias="0.347">

        <TextView
            android:id="@+id/tituloProyectoTres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="10dp"
            android:text="Niveles sonoros - Zona Universitaria Cucea"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/descripcionProjectoTres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:text="Múltiples estudiantes de la UDG han denunciado no poder concentrarse en sus estudios debido a los altos niveles de ruido en la zona universitaria y la biblioteca pública, por lo que elaboraron un proyecto para la creación de un espacio apto para el estudio y la convivencia educativa."
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/barraVerdeTres"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@drawable/green_rectangle"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/humano_icon">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="150 participantes"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:paddingRight="70dp">

            </TextView>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/comments_icon">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:text="250 reports"
                android:textColor="@color/white"
                android:textAlignment="center">

            </TextView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>