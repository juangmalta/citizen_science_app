<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/canvasProjectDos"
        android:layout_width="353dp"
        android:layout_height="139dp"
        android:background="@drawable/grey_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/canvasProjectUno"
        app:layout_constraintVertical_bias="0.154">

        <LinearLayout
            android:id="@+id/barraVerdeDos"
            android:layout_width="353dp"
            android:layout_height="24dp"
            android:background="@drawable/green_rectangle"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige uno de los \nproyectos para participar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <LinearLayout
        android:id="@+id/canvasProjectUno"
        android:orientation="horizontal"
        android:layout_width="353dp"
        android:layout_height="139dp"
        android:background="@drawable/grey_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintVertical_bias="0.093">

        <LinearLayout
            android:id="@+id/barraVerdeUno"
            android:layout_width="353dp"
            android:layout_height="24dp"
            android:background="@drawable/green_rectangle"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:text="Reducción de contaminación - Jardín real"
            android:textColor="@color/white"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/canvasProjectTres"
        android:layout_width="353dp"
        android:layout_height="139dp"
        android:background="@drawable/grey_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/canvasProjectDos"
        app:layout_constraintVertical_bias="0.475">

        <LinearLayout
            android:id="@+id/barraVerdeTres"
            android:layout_width="353dp"
            android:layout_height="24dp"
            android:background="@drawable/green_rectangle"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>